<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary_vertical"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/loginpadding"
    android:paddingRight="@dimen/loginpadding">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="@dimen/loginpadding"
        android:scaleType="centerInside"
        android:src="@drawable/brightgas_logo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_edittext"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:text="cust_004@gmail.com"
        android:theme="@style/EditTextPrimary" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_rectangle_edittext"
        android:hint="Kata Sandi"
        android:text="rahasia"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:theme="@style/EditTextPrimary" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_rectangle_loginbuttonbg"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/buttonpadding"
        android:text="Login"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_half_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="skip login"
        android:textColor="@color/edittextprimarycolor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="forgot password?"
        android:textColor="@color/edittextprimarycolor" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="Register with email"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_white"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_half_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:src="@drawable/ic_g_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:text="Sign in with Google"
            android:textColor="@color/colorIconDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_rectangle_facebook"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_half_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:src="@drawable/ic_facebook"
            android:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:text="Sign in with Facebook"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>