    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_half_margin">

    <ImageView
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/ic_circle_24dp_primary_dark"
        android:tint="@color/dialogcontentgray" />

    <TextView
        android:id="@+id/confirmation_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_half_margin"
        android:text="1 BRIGHT GAS 5,5 KG TABUNG &amp; ISI ULANG"
        android:textColor="@color/dialogcontentgray" />

</LinearLayout>