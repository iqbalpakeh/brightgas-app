<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/pendingcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_half_margin"
            android:background="@drawable/ic_rectangle_pending"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center">
            <TextView
                android:id="@+id/remarktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textColor="@color/pendingtext"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_quarter_margin"/>
            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pendingtext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drivercontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_quarter_margin"
            android:paddingBottom="@dimen/activity_quarter_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_taxi_driver_48dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/namadriver"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/beligrey"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_phone_symbol_of_an_auricular_inside_a_circle"
                android:tint="@color/berhasilteleponagen"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_chat"
                android:tint="@color/pusatbantuangreen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_beli">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/ic_rectangle_pinkdark_top"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin">
                <TextView
                    android:id="@+id/invoicenr"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="12sp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/verylighticontint"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_route"
                        android:tint="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/distance"
                        android:layout_marginLeft="@dimen/activity_half_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="true"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:text=" KM"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/verylighticontint"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/headertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp" />
                    <TextView
                        android:id="@+id/headerdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/customername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="@dimen/activity_half_margin"
                android:background="@color/chartcontentbg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orderlisttitle"
                android:textSize="9sp"
                android:background="@color/verylighticontint"
                android:text="Informasi Pengiriman"
                android:gravity="center"
                android:padding="@dimen/activity_quarter_margin" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/chartcontentbg">
                <LinearLayout
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingTop="@dimen/activity_half_margin"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar_round"
                            android:tint="@color/colorWhite"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/date"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/greendivider"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:layout_marginLeft="@dimen/activity_half_margin"/>
                    <LinearLayout
                        android:paddingTop="@dimen/activity_half_margin"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/colorWhite"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/mytime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greendivider"/>
                <LinearLayout
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delivery_truck"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:id="@+id/address"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="12"
                    android:background="@color/verylighticontint">
                    <TextView
                        android:paddingTop="@dimen/activity_quarter_margin"
                        android:paddingBottom="@dimen/activity_quarter_margin"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:text="Nama barang"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="QTY"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/verylighticontint"/>
                <LinearLayout
                    android:id="@+id/itemcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="1dp">

                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga total barang"
                            android:textSize="11sp"
                            android:textColor="@color/orderlistline"
                            android:padding="@dimen/activity_half_margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongkos kirim"
                            android:textSize="11sp"
                            android:textColor="@color/orderlistline"
                            android:padding="@dimen/activity_half_margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL BELANJA"
                            android:textSize="11sp"
                            android:textColor="@color/orderlistline"
                            android:padding="@dimen/activity_half_margin"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/hargatotalbarang"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/ongkoskirim"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/verylighticontint"
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Biaya ongkos kirim flat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Tabung besar Rp 15.000, Tabung kecil Rp 8.000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Untuk setiap kelipatan Rp 5.000"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/doneicon"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_correct"
                android:tint="@color/lightgreen" />
            <LinearLayout
                android:layout_marginBottom="@dimen/activity_half_margin"
                android:id="@+id/contactcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_call_button"
                    android:padding="@dimen/activity_half_margin"
                    android:tint="@color/colorWhite"
                    android:background="@color/berhasilteleponagen" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat"
                    android:padding="@dimen/activity_half_margin"
                    android:tint="@color/colorWhite"
                    android:background="@color/pusatbantuangreen"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/actioncontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_half_margin">
                <TextView
                    android:id="@+id/action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_half_margin"
                    android:textAllCaps="true"
                    android:text="ambil order"
                    android:gravity="center"
                    android:textColor="@color/orderinfobuttontext"
                    android:background="@drawable/ic_rectangle_orderinfobuttonbg_solid"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>