<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitelight"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:id="@+id/topinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_beli"
            android:padding="@dimen/activity_half_margin"
            android:gravity="center">
            <TextView
                android:id="@+id/terimakasih"
                android:layout_marginBottom="@dimen/activity_quarter_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/informasitransaksititletop"
                android:gravity="center"
                android:textAlignment="center"
                android:text="terima kasih"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/toptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIconDark"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Pesanan Anda sudah kami terima \n Informasi Agen pengirim akan diinformasikan selanjutnya" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/agenpengirimcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_agenpengirim"
            android:layout_marginTop="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_beligrey_solidtop"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/activity_half_margin"
                android:gravity="center"
                android:textAlignment="center"
                android:text="agen pengirim"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_half_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconDark"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:text="pt. dwi citra prameswari"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Jalan Kebayoran Lama Nomor 46, Kebon Jeruk, Jakarta Barat"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconDark"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Telp.(021) 1234567"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliverycontainer"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lacak"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_half_margin"
                android:background="@drawable/ic_rectangle_deliverygreen"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Pesanan sedang diantar"/>
                <ImageView
                    android:layout_marginLeft="@dimen/activity_half_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_route"
                    android:tint="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ic_rectangle_agenpengirim">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_beligrey_solidtop"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_half_margin"
                        android:textColor="@color/colorWhite"
                        android:text="AGEN"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_half_margin"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:text="PENGIRIM"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_half_margin"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pengirimtext"
                            android:textStyle="bold"
                            android:text="PT. DWI CITRA PRAMESWARI"/>
                        <TextView
                            android:layout_marginTop="@dimen/activity_half_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorIconDark"
                            android:text="Jalan Kebayoran Lama Nomor 46, Kebon Jeruk, Jakarta Barat. Telp. (021) 1234567"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_half_margin"
                        android:textColor="@color/pengirimtext"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Asep Suherman"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_beli">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="inv/00123/291016"
                android:background="@drawable/ic_rectangle_pinkdark_top"
                android:padding="@dimen/activity_half_margin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/pinklight"
                android:gravity="center_vertical"
                android:weightSum="12">
                <TextView
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Nama barang"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="QTY"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/itemcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">

                </View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga total barang"
                        android:padding="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongkos kirim"
                        android:padding="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL BELANJA"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/activity_half_margin"/>
                </LinearLayout>
                <View
                    android:layout_marginLeft="1dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/verylighticontint"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/hargatotalbarang"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/berhasilgrey"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/verylighticontint"/>
                    <TextView
                        android:id="@+id/ongkoskirim"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/berhasilgrey"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/verylighticontint"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/verylighticontint"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:paddingTop="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/beligrey"
                    android:text="Biaya ongkos kirim flat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/beligrey"
                    android:text="Tabung besar Rp 15.000, Tabung kecil Rp 8.000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/beligrey"
                    android:text="Untuk setiap kelipatan Rp 5.000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_bggreeninformasitransaksi">
            <LinearLayout
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar_round"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Kamis 03/11/2016"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greendivider"
                    android:layout_marginRight="@dimen/activity_half_margin"
                    android:layout_marginLeft="@dimen/activity_half_margin"/>
                <LinearLayout
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Jam 11.00 - 14.00"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginBottom="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greendivider"/>
            <LinearLayout
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delivery_truck"
                    android:tint="@color/colorWhite"
                    android:layout_marginRight="@dimen/activity_half_margin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Komplek Nusa Indah No. 55, Jalan Raya Nusa Indah Kebon Jeruk, Jakarta Barat"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_rectangle_beligrey"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_half_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIconDark"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Pesanan Anda akan dikirimkan oleh Agen pada:"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconDark"
                    android:text="Hari "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Kamis 3 November 2016 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIconDark"
                    android:text="Pukul "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="14:30"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorIconDark"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Cek tabung terlebih dahulu, Apabila tabung sudah diterima dengan baik, segera konfirmasi barang diterima dengan memasukan PIN pada handphone Agen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_quarter_margin"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/berhasilinvoice"
                android:text="INVOICE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="INV/00123/291016"
                android:layout_marginRight="@dimen/activity_half_margin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_quarter_margin"
            android:background="@drawable/ic_rectangle_accent"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/berhasilpin"
                android:text="PIN"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="2501"
                android:layout_marginRight="@dimen/activity_half_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_half_margin"
            android:background="@color/berhasilteleponagen"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_phone_symbol_of_an_auricular_inside_a_circle"
                android:layout_marginRight="@dimen/activity_half_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="TELEPON AGEN"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_quarter_margin"
            android:background="@drawable/ic_rectangle_pinkdark"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail"
                android:tint="@color/colorWhite"
                android:layout_marginRight="@dimen/activity_half_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="@dimen/activity_half_margin"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="KIRIM INVOICE"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>