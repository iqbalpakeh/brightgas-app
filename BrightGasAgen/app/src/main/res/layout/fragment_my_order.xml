<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/menu1"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/chatrightname"
            android:textAllCaps="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="pilih driver"/>
        <TextView
            android:id="@+id/menu2"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/berandamenutextcolor"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:text="sedang berjalan"/>
        <TextView
            android:id="@+id/menu3"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/berandamenutextcolor"
            android:gravity="center"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:text="riwayat"/>
    </LinearLayout>
    <View
        android:id="@+id/menuline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chatrightname"/>
    <FrameLayout
        android:id="@+id/fragmentcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <include
            android:id="@+id/jarakterdekat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            layout="@layout/item_bottom_menu"/>
        <include
            android:id="@+id/waktupesan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            layout="@layout/item_bottom_menu"/>
        <include
            android:id="@+id/waktuantar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            layout="@layout/item_bottom_menu"/>
    </LinearLayout>
</LinearLayout>