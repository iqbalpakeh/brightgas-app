<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_rectangle_beli">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/ic_rectangle_pinkdark_top"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/invoiceno"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:text="inv/00123/291016"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/verylighticontint"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_route"
                    android:tint="@color/colorWhite"/>
                <TextView
                    android:id="@+id/distance"
                    android:layout_marginLeft="@dimen/activity_half_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:text="4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:text=" KM"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/verylighticontint"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:id="@+id/headertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp"
                    android:text="14:30 WIB"/>
                <TextView
                    android:id="@+id/headerdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp"
                    android:text="Rabu 02/11/2016"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:text="makaila dasilva"
            android:gravity="center"
            android:padding="@dimen/activity_half_margin"
            android:background="@color/chartcontentbg"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orderlisttitle"
            android:textSize="9sp"
            android:text="Informasi Pengiriman"
            android:gravity="center"
            android:padding="@dimen/activity_quarter_margin" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/chartcontentbg">
            <LinearLayout
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar_round"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:id="@+id/date"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Kamis 03/11/2016"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greendivider"
                    android:layout_marginRight="@dimen/activity_half_margin"
                    android:layout_marginLeft="@dimen/activity_half_margin"/>
                <LinearLayout
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clock"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:id="@+id/mytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:text="Jam 11.00 - 14.00"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginBottom="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greendivider"/>
            <LinearLayout
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delivery_truck"
                    android:tint="@color/colorWhite"
                    android:layout_marginRight="@dimen/activity_half_margin"/>
                <TextView
                    android:id="@+id/address"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Komplek Nusa Indah No. 55, Jalan Raya Nusa Indah Kebon Jeruk, Jakarta Barat"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/verylighticontint"
                android:weightSum="12">
                <TextView
                    android:paddingTop="@dimen/activity_quarter_margin"
                    android:paddingBottom="@dimen/activity_quarter_margin"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:text="Nama barang"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/orderlisttitle" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="QTY"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/orderlisttitle" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textSize="9sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/orderlisttitle" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/verylighticontint"/>
            <LinearLayout
                android:id="@+id/itemcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga total barang"
                        android:textSize="11sp"
                        android:textColor="@color/orderlisttitle"
                        android:padding="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongkos kirim"
                        android:textSize="11sp"
                        android:textColor="@color/orderlisttitle"
                        android:padding="@dimen/activity_half_margin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL BELANJA"
                        android:textSize="11sp"
                        android:textColor="@color/orderlisttitle"
                        android:padding="@dimen/activity_half_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/hargatotalbarang"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="12sp"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:id="@+id/ongkoskirim"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="12sp"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="275.000"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="12sp"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/verylighticontint"
                android:paddingLeft="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:paddingTop="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/orderlisttitle"
                    android:text="Biaya ongkos kirim flat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/orderlisttitle"
                    android:text="Tabung besar Rp 15.000, Tabung kecil Rp 8.000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/orderlisttitle"
                    android:text="Untuk setiap kelipatan Rp 5.000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_half_margin">
            <TextView
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_half_margin"
                android:textAllCaps="true"
                android:text="ambil order"
                android:gravity="center"
                android:textColor="@color/orderinfobuttontext"
                android:background="@drawable/ic_rectangle_orderinfobuttonbg_solid"/>
            <TextView
                android:id="@+id/additionaltext"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_half_margin"
                android:text="sedang mengirim"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/orderlistline" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>