<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/pending_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_rectangle_pending"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_half_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_quarter_margin"
                android:text="PENDING"
                android:textColor="@color/pendingtext"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pendingtext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle_beli"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_pinkdark_top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/invoice_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:paddingTop="@dimen/activity_half_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_route"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_half_margin"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/header_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/chartcontentbg"
                android:gravity="center"
                android:padding="@dimen/activity_half_margin"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/verylighticontint"
                android:gravity="center"
                android:padding="@dimen/activity_quarter_margin"
                android:text="Informasi Pengiriman"
                android:textColor="@color/orderlisttitle"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/chartcontentbg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:paddingTop="@dimen/activity_half_margin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:src="@drawable/ic_calendar_round"
                            android:tint="@color/colorWhite" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_half_margin"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:background="@color/greendivider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:paddingTop="@dimen/activity_half_margin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/colorWhite" />

                        <TextView
                            android:id="@+id/my_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/activity_half_margin"
                    android:background="@color/greendivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:src="@drawable/ic_delivery_truck"
                        android:tint="@color/colorWhite" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_half_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu estimasi : "
                    android:textColor="@color/orderlistline"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orderlistline"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verylighticontint"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:paddingBottom="@dimen/activity_quarter_margin"
                        android:paddingTop="@dimen/activity_quarter_margin"
                        android:text="Nama barang"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="QTY"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="9sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Harga"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="9sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/verylighticontint" />

                <LinearLayout
                    android:id="@+id/item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="4">

                    </View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_half_margin"
                            android:text="Harga total barang"
                            android:textColor="@color/orderlistline"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_half_margin"
                            android:text="Ongkos kirim"
                            android:textColor="@color/orderlistline"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_half_margin"
                            android:text="TOTAL BELANJA"
                            android:textColor="@color/orderlistline"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/harga_total_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="275.000"
                            android:textAlignment="center"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ongkos_kirim"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="275.000"
                            android:textAlignment="center"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginRight="@dimen/activity_half_margin"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="275.000"
                            android:textAlignment="center"
                            android:textColor="@color/orderlistline"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/verylighticontint"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:paddingTop="@dimen/activity_half_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biaya ongkos kirim flat"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabung besar Rp 15.000, Tabung kecil Rp 8.000"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk setiap kelipatan Rp 5.000"
                        android:textColor="@color/orderlisttitle"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actioncontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_half_margin">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_half_margin"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_berhasilteleponagen"
                    android:padding="@dimen/activity_quarter_margin"
                    android:src="@drawable/ic_phone_call_button"
                    android:tint="@color/colorWhite" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rectangle_orderinfobuttonbg_solid"
                    android:padding="@dimen/activity_quarter_margin"
                    android:src="@drawable/ic_chat"
                    android:tint="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/verifikasi_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_rectangle_dashboardtitlebg_stroke"
            android:gravity="center"
            android:hint="VERIFIKASI PIN"
            android:inputType="number"
            android:padding="@dimen/activity_half_margin" />

        <LinearLayout
            android:id="@+id/type_driver_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dilokasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_half_margin"
                android:layout_weight="1"
                android:background="@drawable/ic_rectangle_chatright"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/buttonpadding"
                android:text="Di Lokasi"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_rectangle_chatright"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/buttonpadding"
                android:text="pending"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_rectangle_chatright"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/buttonpadding"
            android:text="selesai"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

    </LinearLayout>

</ScrollView>