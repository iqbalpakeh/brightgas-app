<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary_vertical"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/loginpadding"
    android:paddingRight="@dimen/loginpadding">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:scaleType="centerInside"
        android:src="@drawable/brightgas_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/loginpadding"
        android:layout_marginTop="-5dp"
        android:text="For Driver"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_edittext"
        android:hint="Nama Pengguna"
        android:text="driver_0001@gmail.com"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:theme="@style/EditTextPrimary" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_rectangle_edittext"
        android:hint="Kata Sandi"
        android:text="123456"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:theme="@style/EditTextPrimary" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/ic_rectangle_loginbuttonbg"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/buttonpadding"
        android:text="Login"
        android:textColor="@color/colorWhite" />
</LinearLayout>