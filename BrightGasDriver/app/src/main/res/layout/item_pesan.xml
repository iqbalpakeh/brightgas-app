<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rectangle_verylightgray_white"
    android:padding="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_quarter_margin"
        android:paddingBottom="@dimen/activity_quarter_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/mytitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorAccent"
            android:text="PESAN TABUNG &amp; ISI"/>
        <CheckBox
            android:id="@+id/mycheckbox"
            android:layout_width="@dimen/checkboxsize"
            android:layout_height="@dimen/checkboxsize"
            style="@android:style/Widget.CompoundButton.RadioButton"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_quarter_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/verylighticontint"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_quarter_margin"
        android:paddingBottom="@dimen/activity_half_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/edittextgraytextactive"
            android:textSize="17sp"
            android:text="Banyaknya"/>
        <TextView
            android:id="@+id/actionminus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:text="-"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@drawable/ic_rectangle_pesanitembg"/>
        <TextView
            android:id="@+id/quantity"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="0" />
        <TextView
            android:id="@+id/actionplus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:text="+"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:background="@drawable/ic_rectangle_pesanitembg"/>
        <TextView
            android:id="@+id/additionaltext"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/edittextgraytextactive"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="17sp"
            android:text="Lusin"/>
    </LinearLayout>
</LinearLayout>