<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:id="@+id/topcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_half_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/ic_rectangle_violet_solidtop">
        <TextView
            android:id="@+id/invoice_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="test"/>
        <TextView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:text="test"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="@dimen/activity_half_margin"
            android:background="@color/lighticontint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="1dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_calendar_round"/>
            <TextView
                android:id="@+id/mydate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="test"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/activity_half_margin"
            android:paddingBottom="@dimen/activity_half_margin"
            android:paddingRight="@dimen/activity_half_margin"
            android:background="@color/lighticontint"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorWhite"
                android:src="@drawable/ic_clock"/>
            <TextView
                android:id="@+id/my_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="test"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/IconTint"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:text="jarak pengiriman"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:text="item"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:text="total belanja"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle_verylighticon_solidbottom"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/pinkdark"
            android:textAllCaps="true"
            android:text="test"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/IconTint"/>
        <TextView
            android:id="@+id/item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/pinkdark"
            android:textAllCaps="true"
            android:text="text"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/IconTint"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:textColor="@color/pinkdark"
            android:textAllCaps="true"
            android:text="test"/>
    </LinearLayout>
</LinearLayout>