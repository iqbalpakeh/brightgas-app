<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/ic_rectangle_chatrightname_leftside"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_taxi_driver"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:text="nama driver"/>
            </LinearLayout>
            <ImageView
                android:padding="@dimen/activity_quarter_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_call_button"
                android:tint="@color/colorWhite"
                android:background="@color/berhasilteleponagen"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>
            <ImageView
                android:padding="@dimen/activity_quarter_margin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat"
                android:tint="@color/colorWhite"
                android:background="@drawable/ic_rectangle_orderinfobuttonbg_rightside"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_rectangle_dashboardtitlebg_round">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin">
                <TextView
                    android:id="@+id/invoice_no"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:text="inv/00123/291016"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/orderlistline"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_route"
                        android:tint="@color/colorWhite"/>
                    <TextView
                        android:layout_marginLeft="@dimen/activity_half_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:text="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:text=" KM"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/orderlistline"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp"
                        android:text="14:30 WIB"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="9sp"
                        android:text="Rabu 02/11/2016"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:text="makaila dasilva"
                android:gravity="center"
                android:padding="@dimen/activity_half_margin"
                android:background="@color/chartcontentbg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/orderlisttitle"
                android:textSize="9sp"
                android:text="Informasi Pengiriman"
                android:gravity="center"
                android:padding="@dimen/activity_quarter_margin" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/chartcontentbg">
                <LinearLayout
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingTop="@dimen/activity_half_margin"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar_round"
                            android:tint="@color/colorWhite"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:text="Kamis 03/11/2016"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/greendivider"
                        android:layout_marginRight="@dimen/activity_half_margin"
                        android:layout_marginLeft="@dimen/activity_half_margin"/>
                    <LinearLayout
                        android:paddingTop="@dimen/activity_half_margin"
                        android:paddingBottom="@dimen/activity_half_margin"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clock"
                            android:tint="@color/colorWhite"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="10sp"
                            android:text="Jam 11.00 - 14.00"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greendivider"/>
                <LinearLayout
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delivery_truck"
                        android:tint="@color/colorWhite"
                        android:layout_marginRight="@dimen/activity_half_margin"/>
                    <TextView
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Komplek Nusa Indah No. 55, Jalan Raya Nusa Indah Kebon Jeruk, Jakarta Barat"/>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="12">
                    <TextView
                        android:paddingTop="@dimen/activity_quarter_margin"
                        android:paddingBottom="@dimen/activity_quarter_margin"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:text="Nama barang"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="QTY"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/orderlisttitle"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/orderlisttitle" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/orderlisttitle"/>
                <LinearLayout
                    android:id="@+id/item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/orderlistrecapbg"
                    android:weightSum="12">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="1dp">

                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga total barang"
                            android:textSize="11sp"
                            android:textColor="@color/colorWhite"
                            android:padding="@dimen/activity_half_margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongkos kirim"
                            android:textSize="11sp"
                            android:textColor="@color/colorWhite"
                            android:padding="@dimen/activity_half_margin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL BELANJA"
                            android:textSize="11sp"
                            android:textColor="@color/colorWhite"
                            android:padding="@dimen/activity_half_margin"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/harga_total_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="275.000"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/ongkos_kirim"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="275.000"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="275.000"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/activity_half_margin"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/orderlistinfo"
                    android:paddingLeft="@dimen/activity_half_margin"
                    android:paddingRight="@dimen/activity_half_margin"
                    android:paddingTop="@dimen/activity_half_margin"
                    android:paddingBottom="@dimen/activity_half_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Biaya ongkos kirim flat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Tabung besar Rp 15.000, Tabung kecil Rp 8.000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/orderlisttitle"
                        android:text="Untuk setiap kelipatan Rp 5.000"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_half_margin">
                <ImageView
                    android:padding="@dimen/activity_quarter_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_call_button"
                    android:tint="@color/colorWhite"
                    android:background="@drawable/ic_rectangle_berhasilteleponagen"
                    android:layout_marginRight="@dimen/activity_half_margin"/>
                <ImageView
                    android:padding="@dimen/activity_quarter_margin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat"
                    android:tint="@color/colorWhite"
                    android:background="@drawable/ic_rectangle_orderinfobuttonbg_solid"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>