<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama lengkap"
        android:theme="@style/EditTextGray"/>
    <LinearLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Jenis kelamin"
            android:theme="@style/EditTextGray"
            android:drawableRight="@drawable/ic_down_arrow_circular_button"
            android:drawableTint="@color/edittextgrayline"/>
        <EditText
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Tanggal lahir"
            android:theme="@style/EditTextGray"
            android:drawableRight="@drawable/ic_down_arrow_circular_button"
            android:drawableTint="@color/edittextgrayline"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:background="@drawable/ic_rectangle_primary"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_placeholder"
                android:tint="@color/colorWhite"
                android:layout_marginRight="@dimen/activity_half_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Periksa Alamat"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_half_margin"
            android:src="@drawable/ic_correct"
            android:tint="@color/colorWhite"
            android:background="@drawable/ic_rectangle_edittextgrayline"/>
    </LinearLayout>
    <EditText
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat lengkap"
        android:theme="@style/EditTextGray"/>
    <EditText
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kabupaten/Kota"
        android:theme="@style/EditTextGray"/>
    <EditText
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Provinsi"
        android:theme="@style/EditTextGray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/selanjutnya"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="SELANJUTNYA"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/buttonpadding"
        android:background="@drawable/ic_rectangle_accent"/>
</LinearLayout>